[Unit]
Description=The PHP FastCGI Process Manager
After=syslog.target network.target
[Service]
Type=notify
PIDFile=/run/php-fpm-alt%phpver%/php-fpm.pid
ExecStart=/opt/php/%phpver%/sbin/php-fpm --nodaemonize --fpm-config /opt/php/%phpver%/etc/php-fpm.conf
ExecReload=/bin/kill -USR2 $MAINPID
PrivateTmp=true
RuntimeDirectory=php-fpm-alt%phpver%
RuntimeDirectoryMode=0755
[Install]
WantedBy=multi-user.target